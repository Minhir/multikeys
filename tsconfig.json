{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "outDir": "./lib",
        "strict": true,
        "stripInternal": true,
        "target": "ES2015"
    },
    "include": ["src"],
    "typedocOptions": {
        "disableSources": true,
        "entryPoints": ["./src/index.ts"],
        "excludeExternals": true,
        "excludePrivate": true,
        "hideBreadcrumbs": true,
        "name": "API",
        "out": "docs",
        "plugin": "typedoc-plugin-markdown",
        "readme": "none"
  }
}
